---
import Layout from "../layouts/Layout.astro";
import CertificateCard from "../components/CertificateCard.astro";
import RadialProgress from "../components/RadialProgress";

import "../styles/common.css";

export interface Certificate {
  label: string;
  issueDate: string;
  header: string;
  description: string;
  link: string;
}

const radialSettings = {
  width: 15,
  size: 125,
  color: "#52525b",
};

const certificationsList: Certificate[] = [
  {
    label: "/assets/certification/duolingo.svg",
    issueDate: "May 2022",
    header: "Duolingo English Test",
    description: "English Proficiency Certificate (125)",
    link: "https://certs.duolingo.com/a388c42c26b155e684a8b5a6d603fdff",
  },
  {
    label: "/assets/certification/kaggle.svg",
    issueDate: "November 2021",
    header: "Kaggle",
    description: "Intro to Machine Learning",
    link: "https://www.kaggle.com/learn/certification/antonkozyriev/intro-to-machine-learning",
  },
  {
    label: "/assets/certification/kaggle.svg",
    issueDate: "August 2021",
    header: "Kaggle",
    description: "Python",
    link: "https://www.kaggle.com/learn/certification/antonkozyriev/python",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "May 2020",
    header: "Deeplearning.ai",
    description: "Neural networks and Deep Learning",
    link: "https://coursera.org/share/a98baf2ac0434d6efcdeb50084643a07",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "December 2020",
    header: "ISB",
    description: "Leadership and Emotional Intelligence",
    link: "https://coursera.org/share/844a3c5041000ece5bf36392384db7d0",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "December 2020",
    header: "HSE",
    description: "Advanced Machine Learning",
    link: "https://coursera.org/share/2c30c71a381dc146b511a33309642b10",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "October 2020",
    header: "Imperial College London",
    description: "Linear algebra",
    link: "https://coursera.org/share/188f68d6ad88ff3eef98961e9086a861",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "October 2020",
    header: "Imperial College London",
    description: "Multivariate calculus",
    link: "https://coursera.org/share/06f5f2576a99d093d6ebf16d66182032",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "October 2020",
    header: "Imperial College London",
    description: "Principal component analysis",
    link: "https://coursera.org/share/c673eb14edd71538e7b9b6eaaad38fea",
  },
  {
    label: "/assets/certification/coursera.svg",
    issueDate: "October 2020",
    header: "Imperial College London",
    description: "Machine learning",
    link: "https://coursera.org/share/22d0fb5678b04bdcdf2fc6bb1f62a23e",
  },
];
---

<Layout name="SKILLS" title="Anton Kozyriev / Skills">
  <div class="flex stretch scroll-w snap-mandatory snap-x">
    <div
      class="snap-always snap-center flex flex-col stretch scroll-none flex-none"
    >
      <div class="flex-none basis-16">
        <h2 class="header">Languages</h2>
      </div>
      <div class="flex-1">
        <div class="flex justify-center items-center stretch">
          <div class="flex flex-row justify-evenly stretch">
            <div class="flex flex-col justify-center">
              <RadialProgress client:load {...radialSettings} pathLength={1.0}
                ><h2 class="font-radial font-extrabold leading-4 text-zinc-600">
                  C2
                </h2>
              </RadialProgress>
              <h3 class="text-center">Ukrainian</h3>
              <small class="text-center">Native speaker</small>
            </div>
            <div class="flex flex-col justify-center">
              <RadialProgress client:load {...radialSettings} pathLength={1.0}
                ><h2 class="font-radial font-extrabold leading-4 text-zinc-600">
                  C2
                </h2>
              </RadialProgress>
              <h3 class="text-center">Russian</h3>
              <small class="text-center">Bilingual</small>
            </div>
            <div class="flex flex-col justify-center">
              <RadialProgress client:load {...radialSettings} pathLength={0.85}
                ><h2 class="font-radial font-extrabold leading-4 text-zinc-600">
                  C1
                </h2>
              </RadialProgress>
              <h3 class="text-center">English</h3>
              <small class="text-center">Advanced</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div
      class="snap-always snap-center flex flex-col stretch scroll-none flex-none"
    >
      <div class="flex-none basis-16">
        <h2 class="header">Hard Skills</h2>
      </div>
      <div class="flex-1"></div>
    </div>
    <div
      class="snap-normal snap-center flex flex-col stretch scroll-none flex-none"
    >
      <div class="flex-none basis-16">
        <h2 class="header">Certification</h2>
      </div>
      <div class="flex-1">
        <div class="stretch scroll-h">
          <div class="flex flex-col gap-y-4 m-6">
            {
              certificationsList.map((certification) => (
                <CertificateCard
                  label={certification.label}
                  header={certification.header}
                  description={certification.description}
                  issueDate={certification.issueDate}
                  link={certification.link}
                />
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  h2.font-radial {
    font-size: 1.875rem;
  }

  h2.header {
    @apply text-center font-extrabold;
  }

  h3 {
    font-weight: 700;
  }

  .slide-snap-section {
    width: 100%;
    height: 100%;
  }

  small {
    font-weight: 400;
    font-style: italic;
  }
</style>
