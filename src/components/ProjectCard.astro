---
export interface Props {
  projectLink: string;
  demoLink: string;
  dateRange: string;
  title: string;
  imageSrc: string;
  icons: string[];
  description: string;
}

const {
  projectLink,
  demoLink,
  dateRange,
  title,
  imageSrc,
  icons,
  description,
} = Astro.props;
---

<div class="w-96">
  <div class="flex flex-row gap-x-4 p-2 border-b border-zinc-900/5">
    <img
      src="/assets/portfolio/icons/github.svg"
      alt="See on Github"
      class="flex-none basis-8 w-8 h-8"
    />
    <div class="flex-1">
      <div class="flex-col">
        <a href={projectLink}
          ><small class="block text-zinc-600 font-bold text-sm underline"
            >View on Github</small
          >
        </a>
        <small class="block text-zinc-600 leading-none text-xs"
          >{dateRange}</small
        >
      </div>
    </div>
    <div class="flex-none basis-8 p-1">
      <a href={demoLink}>
        <svg
          class="w-6 h-6 fill-[#00000080]"
          focusable="false"
          aria-hidden="true"
          viewBox="0 0 24 24"
          data-testid="OpenInNewIcon"
          ><path
            d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
          ></path>
        </svg>
      </a>
    </div>
  </div>
  <img
    src={imageSrc}
    alt="Dashboard project logo"
    class="w-96 h-96 border-b border-zinc-900/5"
  />
  <h1 class="text-xl mt-4">{title}</h1>
  <div class="flex flex-row gap-x-2 tech-stack mt-2">{icons.map(icon => (<Fragment set:html={icon} />))}</div>
  <p class="py-4 text-justify text-[#00000080] leading-tight text-sm">{description}</p>
</div>
<style>
  .logo {
    flex: none;
    flex-basis: 8rem;
  }
</style>
